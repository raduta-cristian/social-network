<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.social_network.controller.SearchController">
    <children>
        <VBox alignment="CENTER" spacing="10.0">
            <children>
                <HBox alignment="CENTER" spacing="10.0">
                    <Label text="Search by name: " />
                    <TextField fx:id="searchUserField" />
                </HBox>
                <TableView fx:id="tableView">
                    <columns>
                        <TableColumn fx:id="tableColumnFirstName" prefWidth="125.0" text="First Name" />
                        <TableColumn fx:id="tableColumnLastName" prefWidth="125.0" text="Last Name" />
                    </columns>
                </TableView>
                  <Button onAction="#handleSendRequest" text="See Page" />
            </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
        </VBox>
    </children>
</AnchorPane>
